@model IEnumerable<JustGoTravel.Models.Rating.RatingListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Vacation Ratings</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VactionPackID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VacationPackName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VactionPackID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacationPackName)
            </td>

            <td>
                <div class="btn-group  btn-group-toggle" data-toggle="buttons">
                    <label class=" btn btn-outline-secondary">
                        <input type="radio" name="options" id="Option1" />
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    </label>
                    <label class=" btn btn-outline-secondary">
                        <input type="radio" name="options" id="Option1" />
                        @Html.ActionLink("Details", "Details", new { id = item.ID })
                    </label>
                    <label class=" btn btn-outline-secondary">
                        <input type="radio" name="options" id="Option1" />
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </label>
                </div>
            </td>
        </tr>
    }

</table>

<button type="button" class="btn btn-primary btn-lg btn-block" style="background-color:whitesmoke;">@Html.ActionLink("Create New", "Create")</button>


